<main class="column is-12">
<form class="column is-4 is-centered" action="/register" method="post">
  <h1>Register an Account</h1>
  <div class="field">
    <label class="label">Username</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="username" placeholder="Username">
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Email</label>
    <div class="control has-icons-left">
      <input class ="input" type="text" name="email" placeholder="Email address">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>
  <div class="field">
    <label class="label">Password</label>
    <div class="control has-icons-left">
      <input class ="input" type="password" placeholder="Password">
      <span class="icon is-small is-left">
        <i class="fas fa-key"></i>
      </span>
      <p class="help">Password must be at least 6 characters long</p>
    </div>
  </div>
  <div class="field">
    <label class="label">Confirm Password</label>
    <div class="control has-icons-left">
      <input class ="input" type="password" name="password" placeholder="Password">
      <span class="icon is-small is-left">
        <i class="fas fa-key"></i>
      </span>
      <p class="help">Passwords must match</p>
    </div>
  </div>
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
</form>
</main>
